@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout !=  null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "_Layout";
    }
}

<div class="bg-gray-800 p-8 rounded-lg my-auto">
    <h1 class="text-3xl font-bold text-white mb-6">Manage your account</h1>

    <div>
        <h2 class="text-2xl font-semibold text-white mb-4">Change your account settings</h2>
        <hr class="border-gray-300 mb-6" />
        <div class="flex flex-wrap -mx-4">
            <div class="w-full md:w-1/4 px-4 mb-4 md:mb-0">
                <partial name="_ManageNav" />
            </div>
            <div class="w-full md:w-3/4 px-4">
                @RenderBody()
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}